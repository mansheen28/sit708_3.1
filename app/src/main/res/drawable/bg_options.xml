<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#80000000" /> <!-- Shadow color -->
            <corners android:radius="150dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Card background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F3F3F3" /> <!-- Card background color -->
            <corners android:radius="150dp" /> <!-- Rounded corners -->
        </shape>
    </item>
</layer-list>
